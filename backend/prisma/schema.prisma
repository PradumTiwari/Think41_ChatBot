generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "mysql" if you're using MySQL
  url      = env("DATABASE_URL")
}

model DistributionCenter {
  id        Int       @id
  name      String
  latitude  Float
  longitude Float
  products  Product[]
}

model Product {
  id                     Int       @id
  cost                   Float
  category               String
  name                   String
  brand                  String
  retail_price           Float
  department             String
  sku                    String
  distribution_center_id Int
  distributionCenter     DistributionCenter @relation(fields: [distribution_center_id], references: [id])
  inventoryItems         InventoryItem[]
  orderItems             OrderItem[]
}

model InventoryItem {
  id                           Int      @id
  product_id                   Int
  created_at                   DateTime
  sold_at                      DateTime?
  cost                         Float
  product_category             String
  product_name                 String
  product_brand                String
  product_retail_price         Float
  product_department           String
  product_sku                  String
  product_distribution_center_id Int
  product                      Product   @relation(fields: [product_id], references: [id])
  orderItems                   OrderItem[]
}

model Order {
  order_id      Int       @id
  user_id       Int
  status        String
  gender        String
  created_at    DateTime
  returned_at   DateTime?
  shipped_at    DateTime?
  delivered_at  DateTime?
  num_of_item   Int
  user          User      @relation(fields: [user_id], references: [id])
  orderItems    OrderItem[]
}

model OrderItem {
  id               Int       @id
  order_id         Int
  user_id          Int
  product_id       Int
  inventory_item_id Int
  status           String
  created_at       DateTime
  shipped_at       DateTime?
  delivered_at     DateTime?
  returned_at      DateTime?
  order            Order     @relation(fields: [order_id], references: [order_id])
  product          Product   @relation(fields: [product_id], references: [id])
  inventoryItem    InventoryItem @relation(fields: [inventory_item_id], references: [id])
  user             User      @relation(fields: [user_id], references: [id])
}

model User {
  id             Int       @id
  first_name     String
  last_name      String
  email          String    @unique
  age            Int
  gender         String
  state          String
  street_address String
  postal_code    String
  city           String
  country        String
  latitude       Float
  longitude      Float
  traffic_source String
  created_at     DateTime
  orders         Order[]
  orderItems     OrderItem[]
}
